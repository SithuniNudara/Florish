<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/florish?useSSL=false&amp;allowPublicKeyRetrieval=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <mapping class="hibernate.Category"/>
        <mapping class="hibernate.ProductStatus"/>
        <mapping class="hibernate.Volume"/>
        <mapping class="hibernate.City"/>
        <mapping class="hibernate.User"/>
        <mapping class="hibernate.UserType"/>
        <mapping class="hibernate.UserStatus"/>
        <mapping class="hibernate.Mobile"/>
        <mapping class="hibernate.Address"/>
        <mapping class="hibernate.Product"/>
        <mapping class="hibernate.Cart"/>
        <mapping class="hibernate.OrderStatus"/>
        <mapping class="hibernate.Orders"/>
        <mapping class="hibernate.DeliveryType"/>
        <mapping class="hibernate.OrderItems"/>
    </session-factory>
</hibernate-configuration>

